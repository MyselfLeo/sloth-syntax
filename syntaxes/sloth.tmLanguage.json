{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sloth",
	"scopeName": "source.sloth",
	"patterns": [
		{"include": "#comments"},
		{"include": "#control"},
		{"include": "#operators"},
		{"include": "#reserved_var"},
		{"include": "#strings"},
		{"include": "#numbers"},
		{"include": "#function_def"},
		{"include": "#method_def"},
		{"include": "#structure_def"},
		{"include": "#builtin"},
		{"include": "#imports"},
		{"include": "#statics"},
		{"include": "#static_kw"},
		{"include": "#function_call"}
	],

	"repository": {

		"comments": {
			"begin": "\/\/",
			"end": "\n",
			"name": "comment.line"
		},


		"control": {
			"match": "\\b(if|while|new)\\b",
			"name": "keyword.control"
		},



		"operators": {
			"match": "\\s(=|\\+|-|\\*|\\/|%|<=|>=|==|<|>|&|\\?|!|#)\\s",
			"name": "keyword.operator"
		},


		"reserved_var": {
			"match": "\\B@((return|self)|[0-9][0-9]*)\\b",
			"name": "variable.language"
		},

		
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
		},

		
		"numbers": {
            "name": "constant.numeric.decimal",
            "match": "\\b\\d+(\\.\\d+)?\\b",
            "captures": {
                "0": {
                    "name": "constant.numeric.decimal"
                }
            }
        },



		"function_call": {
			"begin": "\\b([_a-zA-Z][_a-zA-Z0-9]*)\\s*(\\()",
			"end": "\\)",
			"beginCaptures": {
				"0": { "name": "entity.name.function" },
				"1": { "name" : "punctuation.paren.open" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.paren.close" }
			},
			"patterns": [
				{"include": "#repository"}
			]
		},


		"method_def": {
			"begin": "\\b(define)\\s\\s*(@?[_a-zA-Z][_a-zA-Z0-9]*)\\s\\s*((for)\\s\\s*([_a-zA-Z][_a-zA-Z0-9]*))?\\s*:\\s*",
			"end": "{",
			"beginCaptures": {
				"1": { "name": "keyword.other" },
				"2": { "name": "entity.name.function" },
				"4": { "name": "keyword.other" },
				"5": { "name": "entity.name.type" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.brackets.curly.open" }
			},
			"patterns": [
				{"include": "#types"},
				{"include": "#comments"}
			]
		},


		"function_def": {
			"begin": "\\b(define)\\s\\s*(@?[_a-zA-Z][_a-zA-Z0-9]*)\\s*:\\s*",
			"end": "{",
			"name": "meta.function",
			"beginCaptures": {
				"1": { "name": "keyword.other" },
				"2": { "name": "entity.name.function" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.brackets.curly.open" }
			},
			"patterns": [
				{"include": "#types"},
				{"include": "#comments"}
			]
		},

		"structure_def": {
			"begin": "\\b(structure)\\s\\s*([_a-zA-Z][_a-zA-Z0-9]*)\\s*{",
			"end": "}",
			"beginCaptures": {
				"1": { "name": "keyword.other" },
				"2": { "name": "entity.name.type" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.brackets.curly.close" }
			},
			"patterns": [
				{"include": "#struct_field_def"},
				{"include": "#comments"}
			]
		},

		"struct_field_def": {
			"begin": "\\b([_a-zA-Z][_a-zA-Z0-9]*)\\s*:",
			"end": ";",
			"beginCaptures": {
				"1": { "name": "entity.other.attribute-name"}
			},
			"patterns": [
				{"include": "#types"},
				{"include": "#comments"}
			]
		},


		"types": {
			"match": "\\b[_a-zA-Z][_a-zA-Z0-9\\[\\]]*\\b",
			"name": "entity.name.type"
		},


		"builtin": {
			"match": "\\b(builtin)\\s\\s*([_a-zA-Z][_a-zA-Z0-9]*)\\s*;",
			"captures": {
				"1": { "name": "keyword.control"},
				"2": { "name": "entity.name.type"}
			}
		},

		"imports": {
			"begin": "\\b(import)\\b",
			"end": ";",
			"beginCaptures": {
				"1": { "name": "keyword.control" }
			},
			"patterns": [
				{"include": "#strings"},
				{"include": "#comments"}
			]
		},

		"statics": {
			"match": "\\b[_A-Z][_A-Z0-9]*\\b",
			"name": "variable.other.constant"
		},

		"static_kw": {
			"match": "\\b(static)\\b",
			"name": "keyword.other"
		}
	}
}